<section class="single-category-content">
  <div class="card-header">
    <h4>{{ name }}</h4>
  </div>
  <div class="card-body">
    <p class="subtext">{{{ description }}}</p>
    <section class="course-selection">
      <div class="row">
        <div class="col-1 course-select"><strong>Popular</strong></div>
        <div class="col-1 course-select">New</div>
        <div class="col-1 course-select">Trending</div>
      </div>
      <section class="progress-wrapper">
        <div class="progress mb-1 ">
          <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0"
            aria-valuemax="100" style="width: 6%;"></div>
        </div>
      </section>
    </section>

    {{{ category_tree }}}

</section>